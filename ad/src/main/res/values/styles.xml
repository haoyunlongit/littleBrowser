<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">@color/ad_attribute_bg</item>
    </style>
    <style name="AdAttribution_feed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#3B6727</item>
        <item name="android:textSize">10sp</item>
        <item name="android:text">@string/ad_attribution</item>
    </style>
    <style name="FullscreenTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>